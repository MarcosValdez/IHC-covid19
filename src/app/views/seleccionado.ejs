            <div class="mapa-hospital">
                <iframe src=<%=resultado[0].mapa %> width="600" height="450" frameborder="0"
                    style="border:0;"allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>


        <%- include ('partials/_footer') %>

