    <body>
        <header class="menu">
            <section id="cabecera">
                <a id="logo" href="/">AmezagaCode</a>
                <nav class="navbar-menu">
                    <ul id="navitem-elemento">
                        <li><a href="/">Inicio</a></li>
                        <li><a href="verificar">Verificar</a></li>
                        <li><a href="#">Acerca de nosotros</a></li>
                    </ul>
                </nav>
                <ul class="link-login-acceder">
                    <li><a href="login"><i class="fas fa-sign-in-alt"></i>Acceder</a></li>
                </ul>
                <div class="lines">
                    <i class="fas fa-bars"></i>
                </div>
            </section>

        </header>
        <div></div>
        <!-- partial:index.partial.html -->
        <div class="container seleccionado">
            <div class="titulo">
                <div class="check">
                    <i class="far fa-check-circle"></i>
                </div>
                HAS SIDO SELECCIONADO
            </div>
            <div class="datos">
                <div class="row">
                    <div class="col-sm">
