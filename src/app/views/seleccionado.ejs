                        <%= resultado[0].nombre_hospital %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        Direccion:
                    </div>
                    <div class="col">
                        <%= resultado[0].direccion_hospital %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        Telefono:
                    </div>
                    <div class="col">
                        <%= resultado[0].telefono_paciente %>
                    </div>
                </div>
