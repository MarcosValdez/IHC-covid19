<%- include ('partials/_header') %>
    <link rel="stylesheet" href="/css/categoria.css">

    </head>

    <body>
        <!-- partial:index.partial.html -->
        <header class="menu">
            <section id="cabecera">
                <div class="menu2">
                    <a id="logo" href="/">AmezagaCode</a>
                    <div class="lines hamburger" id="hamburger">
                        <i class="fas fa-bars"></i>
                    </div>
                </div>


                <nav class="navbar-menu nav-ul" id="nav-ul">
                    <ul id="navitem-elemento" class="nav-ul">
                        <li>
                            <a href="/">Inicio</a>
                        </li>
                        <li>
                            <a href="verificar">Verificar</a>
                        </li>
                        <li class="link-login-acceder">
                            <a href="/logout">Logout </a>
                        </li>
                    </ul>
                </nav>
            </section>

        </header>

        <div class="vacio"></div>

        <table>
            <thead>
                <tr>
                    <th>DNI</th>
                    <th>Nombres</th>
                    <th>Categoria</th>
                    <th>Subcategoria</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>

                <% for (let i=0; i < personas.length; i++){ %>
                    <tr>
                        <td>
                            <%= personas[i].dni %>
                        </td>
                        <td>
                            <%= personas[i].nombre %>
                        </td>
                        <td>
                            <%= personas[i].id_subcategoria %>
                        </td>
                        <td>
                            <%= personas[i].id_subcategoria %>
                        </td>
                        <td>
                            <%= personas[i].estado %>
                        </td>
                        <td class="tabla-vacia"><i class="fas fa-cog"></i></td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

        <%- include ('partials/_footer') %>
    </body>

    </html>