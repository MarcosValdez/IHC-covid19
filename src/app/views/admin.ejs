    <h1 class="text-center">Lista de Personas</h1>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <table id="example" class="table table-bordered  display nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>DNI</th>
                            <th>Nombres</th>
                            <th>Categoria</th>
                            <th>Subcategoria</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i=0; i < 50; i++){ %>
                            <tr>
                                <td>
                                    <%= personas[i].dni %>
                                </td>
                                <td>
                                    <%= personas[i].nombre %>
                                </td>
                                <td>
                                    <%= categorias[subcategorias[personas[i].id_subcategoria -1].id_categoria
                                                -1].nombre_categoria %>
                                </td>
                                <td>
                                    <%= subcategorias[personas[i].id_subcategoria -1].nombre_subcategoria %>
                                </td>
                                <td>
                                    <% if (i%7 != 0 ) { %>
                                        Vacunado

                                        <%} else {%>
                                            No Vacunado
                                            <% } %>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>DNI</th>
                            <th>Nombres</th>
                            <th>Categoria</th>
                            <th>Subcategoria</th>
                            <th>Estado</th>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>



    <!-- Optional JavaScript -->
