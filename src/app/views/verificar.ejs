<%- include ('partials/_header') %>

    <link rel="stylesheet" href="/css/verificar.css">
    <script src='https://www.google.com/recaptcha/api.js?hl=es'></script>
    </head>

    <body>
        <%- include ('partials/_navbar',{uno:'', dos: 'inicio', tres: ''}) %>

            <div class="vacio"></div>
            <% if (validate != '') { %>
                <div class="mensaje-error" id="mensaje">
                   <div id="peligro"> <i class="fas fa-exclamation-triangle"></i> </div> <%= validate %>
                        <button id="btn">X</button>
                </div>
                <% } %>
                    <div class="contenedor">
                        <div class="imagen">
                            <img src="/images/covid3.jpg" alt="">
                            <div id="grupowarning">
                                <p class="warning"><i class="fas fa-exclamation-triangle"></i> No comparta tu informacion personal.</p>
                                <p class="warning"><i class="fas fa-exclamation-triangle"></i> No aceptes ayuda de grupos de redes sociales.</p>
                                <p class="warning"><i class="fas fa-exclamation-triangle"></i> No hagas caso de llamadas, mensajes o correos fraudulentos.</p>
                            </div>
                        </div>
                        <form id="form-verificar" action="/verificar" method="post">

                            <div class="cab">
                                <span class="titulo-cab">Consulte si es beneficiario de la vacuna</span>
                            </div>

                            <div class="content">
                                <label for="dni">Ingrese el DNI: </label>
                                <input class="input" id="dni" type="text" maxlength="8" name="username" autofocus placeholder="DNI" autocomplete="off" required>

                            </div>


                            <div class="content">
                                <label for="nombre">Ingrese la fecha de emision</label>
                                <input class="input" id="nombre" type="date" name="password" placeholder="Fecha de emision" required>

                            </div>

                            <div class="contener">
                                <div class="g-recaptcha" data-sitekey="6Lehlh4aAAAAANtaD9QvOOYA5cSY-Q6b-Kpo3rcF"></div>
                            </div>

                            <button class="boton" id="btn-verificar" type="submit">Verificar</button>

                        </form>
                        
                    </div>
                    <% if (noselect != '') { %>
                        
                        <div class="mensaje-error" id="mensaje">
                            <i class="fas fa-sad-tear"></i>
                            <%= noselect %>
                                <button id="btn">X</button>
                        </div>
                    
                        <% } %>
                    <%- include ('partials/_footer') %>   
    </body>
    </html>